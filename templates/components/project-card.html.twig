{#
    Project card component
    
    Parameters:
    - project: The project object to display
    - language: Current language code
    - translations: Translation service
#}

<article class="project-card hover-lift fade-in">
    <div class="project-card-grid">
        <div class="project-info">
            <h3 class="project-title">
                {{ project.type|upper }} - <span>{{ project.title }}</span>
            </h3>
            
            {% if project.status %}
                <div class="project-status status-{{ project.status }}">
                    {{ translations.translate('admin.status_' ~ project.status) }}
                </div>
            {% endif %}
            
            <p class="project-date">
                {% if project.status == 'current' %}
                    {{ translations.translate('project.since') }} {{ project.start_date|date('F Y') }}
                {% else %}
                    {{ project.start_date|date('F Y') }}
                    {% if project.end_date %}
                        - {{ project.end_date|date('F Y') }}
                    {% endif %}
                {% endif %}
            </p>
            
            <div class="project-links">
                {% if project.github_url %}
                    <a href="{{ project.github_url }}" target="_blank" class="project-link" rel="noopener">
                        <span class="hidden-mobile">GitHub: </span>{{ project.github_url|replace({'https://': '', 'http://': ''}) }}
                    </a>
                {% endif %}
                
                {% if project.website_url %}
                    <a href="{{ project.website_url }}" target="_blank" class="project-link" rel="noopener">
                        <span class="hidden-mobile">Website: </span>{{ project.website_url|replace({'https://': '', 'http://': ''}) }}
                    </a>
                {% endif %}
            </div>
        </div>
        
        <div class="project-content">
            <p class="project-description">
                {{ project.description|nl2br }}
            </p>
            
            <p class="project-skills">
                {{ project.skills }}
            </p>
            
            {% if is_admin is defined and is_admin %}
                <div class="project-actions">
                    <a href="/admin/project/edit/{{ project.id }}" class="btn btn-primary">
                        {{ translations.translate('admin.edit') }}
                    </a>
                    <form action="/admin/project/delete/{{ project.id }}" method="post" onsubmit="return confirm('{{ translations.translate('admin.confirm_delete') }}')">
                        <button type="submit" class="btn btn-danger">
                            {{ translations.translate('admin.delete') }}
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</article>