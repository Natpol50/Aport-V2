<section class="competencies-section">
    <div class="container">
        <h2 class="section-heading">{{ translations.translate('competencies.heading') }}</h2>

        <div class="competencies-container">
            {% if categories|length > 0 %}
                <div class="competencies-table">
                    {% for category in categories %}
                        <div class="competency-row">
                            <div class="category-cell">
                                <h3 class="category-name">{{ category.name }}</h3>
                            </div>
                            <div class="skills-cell">
                                {% for competency in category.competencies %}
                                    <span class="competency-badge" style="background-color: {{ competency.color }}">
                                        <span class="trapezoid-text">{{ competency.name }}</span>
                                    </span>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="no-competencies">{{ translations.translate('competencies.none_defined') }}</p>
            {% endif %}
        </div>
    </div>
</section>