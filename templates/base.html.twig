{# Add this in the <head> section after the main CSS #}
<link rel="stylesheet" href="/assets/css/main.css">
<link rel="stylesheet" href="/assets/css/visual-fixes.css">
{% block stylesheets %}{% endblock %}

{# Replace the language switcher in the nav-container with our updated version #}
{# Include our updated language switcher component #}
{% include 'components/language-switcher.html.twig' %}

{# Update the footer section to work better on small screens #}
{% block footer %}
<footer class="site-footer">
    <div class="container">
        <div class="footer-grid">
            {# About Section - Will be hidden on mobile #}
            <div class="footer-about">
                <h2 class="footer-heading">
                    {{ translations.translate('footer.about_title') }}
                </h2>
                <div class="about-content">
                    {{ personalInfo.about_text|raw }}
                </div>
            </div>
            
            {# Contact Cards Section #}
            <div class="footer-contact">
                <h2 class="footer-heading">
                    {{ translations.translate('footer.contact_title') }}
                </h2>
                <div class="contact-cards">
                    {# Email Card #}
                    <a href="mailto:{{ personalInfo.email }}" class="contact-card interactive" target="_blank">
                        <div class="card-content">
                            <img src="/assets/img/mail.png" alt="" aria-hidden="true">
                            <span>{{ personalInfo.email }}</span>
                        </div>
                    </a>
                    
                    {# GitHub Card #}
                    <a href="{{ personalInfo.github_url }}" class="contact-card interactive" target="_blank" rel="noopener">
                        <div class="card-content">
                            <img src="/assets/img/github.png" alt="" aria-hidden="true">
                            <span>GitHub</span>
                        </div>
                    </a>
                    
                    {# LinkedIn Card #}
                    <a href="{{ personalInfo.linkedin_url }}" class="contact-card interactive" target="_blank" rel="noopener">
                        <div class="card-content">
                            <img src="/assets/img/linkedin.png" alt="" aria-hidden="true">
                            <span>LinkedIn</span>
                        </div>
                    </a>
                    
                    {% if personalInfo.discord_url %}
                        {# Discord Card #}
                        <a href="{{ personalInfo.discord_url }}" class="contact-card interactive" target="_blank" rel="noopener">
                            <div class="card-content">
                                <img src="/assets/img/discord.png" alt="" aria-hidden="true">
                                <span>Discord</span>
                            </div>
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="footer-copyright">
            <p>Â© {{ current_year }} Asha Geyon. {{ translations.translate('footer.rights_reserved') }}</p>
        </div>
    </div>
</footer>
{% endblock %}