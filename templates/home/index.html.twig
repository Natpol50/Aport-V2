{% extends 'base.html.twig' %}

{% block title %}{{ translations.translate('site.title') }}{% endblock %}

{% set is_home_page = true %}

{% block hero %}
    <div class="hero-section">
        <div class="hero-content interactive">
            <h1 class="hero-title">Polette Nathan</h1>
            <p class="hero-subtitle">{{ translations.translate('home.subtitle') }}</p>
            <button id="contact-button" class="interactive contact-button" onclick="window.location.href='{{ language == 'fr' ? '/contact' : '/contact-en' }}'">
                <span>{{ translations.translate('home.contact_button') }}</span>
            </button>
        </div>
        
        {# Scroll indicator #}
        <div class="scroll-indicator interactive">â‡£</div>
    </div>
{% endblock %}

{% block content %}
    {# Projects content #}
    <div id="projets" class="relative">
        {# Top triangle transition #}
        <div class="triangle-section">
            <svg preserveAspectRatio="none" viewBox="0 0 1920 120">
                <defs>
                    <filter id="topShadow" x="0" y="0" width="100%" height="200%">
                        <feDropShadow dx="0" dy="-4" stdDeviation="3" flood-opacity="0.3"/>
                    </filter>
                </defs>
                <path d="M0 120 L1920 80 L1920 120 L0 120 Z" fill="#3E3E53"/>
                <path d="M0 120 L1920 40 L1920 80 L0 120 Z" fill="#D7D7D7"/>
                <path d="M0 120 L1920 0 L1920 40 L0 120 Z" fill="#658C79" filter="url(#topShadow)"/>
            </svg>
        </div>

        {# Projects section #}
        <div class="projects-section">
            <div class="container">
                <h2 class="projects-title fade-in">{{ translations.translate('home.projects_title') }}</h2>
                
                {# Current Projects #}
                <section class="content-section fade-in">
                    <h3 class="section-title">{{ translations.translate('home.current_projects') }}</h3>

                    {% if currentProjects|length > 0 %}
                        {% for project in currentProjects %}
                            {% include 'components/project-card.html.twig' with {
                                'project': project,
                                'language': language,
                                'translations': translations
                            } %}
                        {% endfor %}
                    {% else %}
                        <p class="projects-empty">{{ translations.translate('home.no_current_projects') }}</p>
                    {% endif %}
                </section>
                
                {# Past Projects #}
                <section class="content-section fade-in">
                    <h3 class="section-title">{{ translations.translate('home.past_projects') }}</h3>

                    {% if pastProjects|length > 0 %}
                        {% for project in pastProjects %}
                            {% include 'components/project-card.html.twig' with {
                                'project': project,
                                'language': language,
                                'translations': translations
                            } %}
                        {% endfor %}
                    {% else %}
                        <p class="projects-empty">{{ translations.translate('home.no_past_projects') }}</p>
                    {% endif %}
                </section>
            </div>
        </div>

        {# Bottom triangle transition #}
        <div class="triangle-section">
            <svg preserveAspectRatio="none" viewBox="0 0 1920 120">
                <defs>
                    <filter id="bottomShadow" x="0" y="-20%" width="100%" height="140%">
                        <feDropShadow dx="0" dy="4" stdDeviation="3" flood-opacity="0.3"/>
                    </filter>
                </defs>
                <path d="M0 0 L1920 100 L1920 0 L0 0 Z" fill="#658C79" filter="url(#bottomShadow)"/>
                <path d="M0 0 L1920 40 L1920 80 L0 0 Z" fill="#D7D7D7"/>
                <path d="M0 0 L1920 0 L1920 40 L0 0 Z" fill="#3E3E53"/>
            </svg>
        </div>
    </div>
{% endblock %}